<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_player_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 戻るボタン（左上） -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_media_previous"
        android:contentDescription="@string/back_to_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Now Playing -->
    <TextView
        android:id="@+id/tv_now_playing_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/now_playing"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 再生中の曲名 -->
    <TextView
        android:id="@+id/tv_current_track_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Track Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- シークバー -->
    <SeekBar
        android:id="@+id/seekbar_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_current_track_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 再生経過時間 -->
    <TextView
        android:id="@+id/tv_elapsed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/seekbar_progress"
        app:layout_constraintStart_toStartOf="@id/seekbar_progress" />

    <!-- 総時間 -->
    <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:45"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/seekbar_progress"
        app:layout_constraintEnd_toEndOf="@id/seekbar_progress" />

    <!-- 再生コントロール（中央・横一列） -->
    <LinearLayout
        android:id="@+id/layout_playback_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_total_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 前の曲ボタン -->
        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="@string/prev_track"
            android:layout_marginEnd="24dp" />

        <!-- 再生 / 一時停止ボタン（中央・大きめ） -->
        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="@string/play_or_pause"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" />

        <!-- 次の曲ボタン -->
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="@string/next_track" />

    </LinearLayout>


    <!-- リピートボタン -->
    <ImageButton
        android:id="@+id/btn_repeat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_rotate"
        android:contentDescription="@string/repeat_one"
        app:layout_constraintTop_toBottomOf="@id/layout_playback_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 音量ラベル -->
    <TextView
        android:id="@+id/tv_volume_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/volume_label"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btn_repeat"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 音量最小アイコン -->
    <ImageView
        android:id="@+id/iv_volume_min"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/ic_lock_silent_mode"
        app:layout_constraintTop_toTopOf="@id/tv_volume_label"
        app:layout_constraintBottom_toBottomOf="@id/tv_volume_label"
        app:layout_constraintStart_toEndOf="@id/tv_volume_label" />

    <!-- 音量スライダー -->
    <SeekBar
        android:id="@+id/seekbar_volume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_volume_label"
        app:layout_constraintBottom_toBottomOf="@id/tv_volume_label"
        app:layout_constraintStart_toEndOf="@id/iv_volume_min"
        app:layout_constraintEnd_toStartOf="@id/iv_volume_max" />

    <!-- 音量最大アイコン -->
    <ImageView
        android:id="@+id/iv_volume_max"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        app:layout_constraintTop_toTopOf="@id/tv_volume_label"
        app:layout_constraintBottom_toBottomOf="@id/tv_volume_label"
        app:layout_constraintStart_toEndOf="@id/seekbar_volume"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
